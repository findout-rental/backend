    {
      "name": "Booking Management",
      "item": [
        {
          "name": "List My Bookings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/bookings?status=all",
              "host": ["{{base_url}}"],
              "path": ["bookings"],
              "query": [
                {
                  "key": "status",
                  "value": "all",
                  "description": "all, current, past, cancelled"
                }
              ]
            }
          }
        },
        {
          "name": "Create Booking",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.booking && jsonData.data.booking.id) {",
                  "        pm.collectionVariables.set('booking_id', jsonData.data.booking.id);",
                  "        console.log('Booking ID saved:', jsonData.data.booking.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"apartment_id\": 1,\n  \"check_in_date\": \"2025-01-15\",\n  \"check_out_date\": \"2025-01-20\",\n  \"number_of_guests\": 2\n}"
            },
            "url": {
