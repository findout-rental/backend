                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/apartments?page=1&per_page=20",
              "host": ["{{base_url}}"],
              "path": ["apartments"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "per_page",
                  "value": "20"
                },
                {
                  "key": "search",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "city",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "min_price",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "max_price",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "bedrooms",
                  "value": "",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Apartment Details",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.apartment && jsonData.data.apartment.id) {",
                  "        pm.collectionVariables.set('apartment_id', jsonData.data.apartment.id);",
                  "        console.log('Apartment ID saved:', jsonData.data.apartment.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/apartments/1",
              "host": ["{{base_url}}"],
              "path": ["apartments", "1"]
            }
          }
        }
      ]
