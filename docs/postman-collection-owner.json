              }
            ],
            "url": {
              "raw": "{{base_url}}/owner/bookings?status=all",
              "host": ["{{base_url}}"],
              "path": ["owner", "bookings"],
              "query": [
                {
                  "key": "status",
                  "value": "all",
                  "description": "all, pending, approved, rejected, completed, cancelled"
                }
              ]
            }
          }
        },
