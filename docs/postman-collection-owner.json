        },
        {
          "name": "Create Apartment",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.apartment && jsonData.data.apartment.id) {",
                  "        pm.collectionVariables.set('apartment_id', jsonData.data.apartment.id);",
                  "        console.log('Apartment ID saved:', jsonData.data.apartment.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Beautiful Apartment\",\n  \"description\": \"A cozy apartment in the city center\",\n  \"address\": \"123 Main St\",\n  \"city\": \"Damascus\",\n  \"price_per_night\": 50.00,\n  \"bedrooms\": 2,\n  \"bathrooms\": 1,\n  \"max_guests\": 4,\n  \"amenities\": [\"WiFi\", \"Air Conditioning\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/owner/apartments",
              "host": ["{{base_url}}"],
              "path": ["owner", "apartments"]
            }
          }
        },
